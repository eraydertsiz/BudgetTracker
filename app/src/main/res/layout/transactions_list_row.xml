<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:weightSum="6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/transactions_list_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="125.00"
            android:layout_margin="4dp"/>

        <TextView
            android:id="@+id/transactions_list_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Family"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/transactions_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="23/02/2020 14:34:05"
            android:layout_marginLeft="4dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/transactions_list_delete_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleY="0.75"
        android:scaleX="0.75"
        android:background="@null"
        android:src="@drawable/delete"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:tint="#c53020"/>

</LinearLayout>